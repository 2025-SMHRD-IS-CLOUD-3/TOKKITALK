<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- MemberMapper.xml -->
<mapper namespace="com.tokkitalk.model.MemberDAO">

    <!-- 회원가입 쿼리 -->
    <insert id="insertMember">
        INSERT INTO members (user_id, password, user_name, gender, birth_date)
        VALUES (#{userId}, #{password}, #{userName}, #{gender}, #{birthDate})
    </insert>

    <!-- 로그인 확인 쿼리 -->
    <select id="validateUser" resultType="com.tokkitalk.model.MavenMember">
        SELECT * FROM members
        WHERE user_id = #{userId} AND password = #{password}
    </select>

    <!-- 회원 정보 수정 
    <update id="updateMember" parameterType="com.smhrd.model.MavenMember">
        UPDATE TB_USER_INFO 
        SET USER_PW=#{password}, USER_NAME=#{userName}, GENDER=#{gender}, USER_DATE=#{birthDate} 
        WHERE USER_ID=#{userId}
    </update>-->

    <!-- 회원 정보 조회 
    <select id="selectMember" resultType="com.smhrd.model.MavenMember">
        SELECT * FROM TB_USER_INFO
    </select>-->

</mapper>