<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.tokkitoalk.db.MemberMapper">

   	<!-- 회원가입 -->
    <insert id="join" parameterType="com.tokkitoalk.model.MavenMember">
        INSERT INTO TB_USER_INFO (USER_ID, USER_PW, USER_NAME, GENDER, USER_DATE) 
        VALUES (#{userId}, #{password}, #{userName}, #{gender}, #{birthDate})
    </insert>

    <!-- 로그인 -->
    <select id="login" resultType="com.tokkitoalk.model.MavenMember" parameterType="com.smhrd.model.MavenMember">
        SELECT * FROM TB_USER_INFO WHERE USER_ID=#{userId} AND USER_PW=#{password}
    </select>

    <!-- 회원 정보 수정 
    <update id="updateMember" parameterType="com.smhrd.model.MavenMember">
        UPDATE TB_USER_INFO 
        SET USER_PW=#{password}, USER_NAME=#{userName}, GENDER=#{gender}, USER_DATE=#{birthDate} 
        WHERE USER_ID=#{userId}
    </update>-->

    <!-- 회원 정보 조회 
    <select id="selectMember" resultType="com.smhrd.model.MavenMember">
        SELECT * FROM TB_USER_INFO
    </select>-->

</mapper>