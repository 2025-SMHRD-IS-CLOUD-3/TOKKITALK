<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tokkitalk.db.MemberMapper">
	
	<!-- 회원가입 -->
	<insert id="join" parameterType="com.tokkitalk.model.MevenMember">
		INSERT INTO TB_USER_INFO (USER_ID, USER_PW, USER_NAME, GENDER, USER_DATE)
		VALUES (#{user_id}, #{user_pw}, #{user_name}, #{gender}, #{user_date,jdbcType=DATE})
	</insert>
	
	<!-- 로그인 -->
	<select id="login" parameterType="com.tokkitalk.model.MevenMember" resultType="com.tokkitalk.model.MevenMember">
		<!-- 
		실행되는 SQL: 
		SELECT USER_ID, USER_PW, USER_NAME, GENDER, USER_DATE 
		FROM TB_USER_INFO 
		WHERE USER_ID = 'test' AND USER_PW = '1234'
		-->
		SELECT USER_ID, USER_PW, USER_NAME, GENDER, USER_DATE 
		FROM TB_USER_INFO 
		WHERE USER_ID = #{user_id} AND USER_PW = #{user_pw}
	</select>
	
	<!-- 테스트용 전체 데이터 조회 -->
	<select id="testSelectAll" resultType="com.tokkitalk.model.MevenMember">
		SELECT USER_ID, USER_PW, USER_NAME, GENDER, USER_DATE 
		FROM TB_USER_INFO
	</select>
	
	<!-- 테스트용 데이터 삭제 -->
	<delete id="deleteTestData">
		DELETE FROM TB_USER_INFO WHERE USER_ID = 'test'
	</delete>
	
	<!-- 회원 정보 조회 -->
	<select id="selectMember" parameterType="String" resultType="com.tokkitalk.model.MevenMember">
		SELECT * FROM TB_USER_INFO WHERE USER_ID = #{user_id}
	</select>
	
	<!-- 전체 회원 조회 -->
	<select id="selectAll" resultType="com.tokkitalk.model.MevenMember">
		SELECT * FROM TB_USER_INFO ORDER BY USER_DATE DESC
	</select>

</mapper>
